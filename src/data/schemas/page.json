{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "UID"
      }
    },
    "page_title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1,heading2,heading3,heading4,heading5,heading6",
        "label": "Page title"
      }
    },
    "subtitle": {
      "type": "Text",
      "config": {
        "label": "Subtitle"
      }
    },
    "featured_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": null
        },
        "thumbnails": [],
        "label": "Featured image"
      }
    },
    "show_header": {
      "type": "Boolean",
      "config": {
        "default_value": true,
        "label": "Show header"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {},
        "choices": {
          "program": {
            "type": "Slice",
            "fieldset": "Program",
            "description": "Talk to the programmer before using!",
            "icon": "directions_run",
            "display": "list",
            "non-repeat": {
              "program_name": {
                "type": "Text",
                "config": {
                  "label": "Program name"
                }
              }
            },
            "repeat": {}
          },
          "members": {
            "type": "Slice",
            "fieldset": "Members",
            "description": "Add existing members into this slice.",
            "icon": "people_outline",
            "display": "list",
            "non-repeat": {
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "Title"
                }
              }
            },
            "repeat": {
              "member": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["member"],
                  "label": "Member"
                }
              }
            }
          },
          "heading": {
            "type": "Slice",
            "fieldset": "Heading",
            "description": "Large text, looks good at top of page.",
            "icon": "text_fields",
            "non-repeat": {
              "heading": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Heading"
                }
              }
            },
            "repeat": {}
          },
          "rich_text": {
            "type": "Slice",
            "fieldset": "Rich Text",
            "description": "Add text and headings with variations.",
            "icon": "format_textdirection_l_to_r",
            "non-repeat": {
              "paragraph_style": {
                "type": "Select",
                "config": {
                  "options": ["wide", "slim", "center"],
                  "default_value": "wide",
                  "label": "Paragraph style"
                }
              },
              "font_size": {
                "type": "Select",
                "config": {
                  "options": ["normal", "small", "large"],
                  "default_value": "normal",
                  "label": "Font size"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,embed,list-item,o-list-item,rtl",
                  "allowTargetBlank": true,
                  "label": "Text"
                }
              }
            },
            "repeat": {}
          },
          "projects": {
            "type": "Slice",
            "fieldset": "Projects",
            "description": "Displays projects",
            "icon": "border_all",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "project": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["project"],
                  "label": "Project"
                }
              }
            }
          },
          "media": {
            "type": "Slice",
            "fieldset": "Media",
            "description": "Add image",
            "icon": "perm_media",
            "display": "list",
            "non-repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Image"
                }
              }
            },
            "repeat": {}
          },
          "feature": {
            "type": "Slice",
            "fieldset": "Feature",
            "description": "Add gallery and text, align left or right.",
            "icon": "chrome_reader_mode",
            "display": "list",
            "non-repeat": {
              "image_right": {
                "type": "Boolean",
                "config": {
                  "default_value": false,
                  "label": "Image right"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item,rtl",
                  "allowTargetBlank": true,
                  "label": "Text"
                }
              }
            },
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 2000
                  },
                  "thumbnails": [],
                  "label": "Image"
                }
              },
              "caption": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink",
                  "allowTargetBlank": true,
                  "label": "Caption"
                }
              }
            }
          }
        }
      }
    }
  }
}
